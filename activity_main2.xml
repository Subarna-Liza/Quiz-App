<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FirstTextViewID"
        android:text="@string/Question2"
        android:textSize="30dp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_marginTop="10dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RadioGroupID2">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RadioButtonID2.1"
            android:text="@string/Apple"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RadioButtonID2.2"
            android:text="@string/Hawaei"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RadioButtonID2.3"
            android:text="@string/Google"
            android:textSize="20dp"
            android:textStyle="bold"
           />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RadioButtonID2.4"
            android:text="@string/Hawaei"
            android:textSize="20dp"
            android:textStyle="bold"
          />

    </RadioGroup>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SubmitButtonID"
        android:text="Submit"
        android:onClick="SubmitFunction"
        android:textSize="20dp"
        android:textStyle="bold"
        />

</LinearLayout>
